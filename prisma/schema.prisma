generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  year      Int?
  roles     String[]
  major     String
  minor     String?
  birthday  String
  locale    String
  quote     String
  favThings String[]
  funFact   String
  tradition String
  img       String?

  club   Club?  @relation(fields: [clubId], references: [id])
  clubId Int?
  posts  Post[]
}

model Club {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  img         String?
  members     User[]
  posts       Post[]
}

model Post {
  id     Int      @id @default(autoincrement())
  author User     @relation(fields: [userId], references: [id])
  userId Int
  club   Club     @relation(fields: [clubId], references: [id])
  clubId Int
  text   String
  date   DateTime
}
